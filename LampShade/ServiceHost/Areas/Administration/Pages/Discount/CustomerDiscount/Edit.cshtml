@model DiscountManagement.Application.Contracts.CustomerDiscount.EditCustomerDiscount
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش تخفیف </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id"/>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label" asp-for="ProductId">نام محصول</label>
                    <select class="form-control" asp-for="ProductId"
                            asp-items='new SelectList(@Model.Products, "Id", "Name")'>
                        <option value="0"> محصولات</option>
                    </select>
                    @*<span asp-validation-for="CategoryId" class="error"></span>*@
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DiscountRate" class="control-label"> نرخ تخفیف</label>
                    <input type="text" class="form-control" asp-for="DiscountRate" >
                    <span asp-validation-for="DiscountRate" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Reason" class="control-label">علت تخفیف</label>
                    <input type="text" class="form-control" asp-for="Reason">
                    <span asp-validation-for="Reason" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.StartDate" class="control-label">تاریخ شروع</label>
                    <input class="form-control observer-example" asp-for="@Model.StartDate">
                    <span asp-validation-for="StartDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.EndDate" class="control-label">تاریخ پایان</label>
                    <input class="form-control observer-example" asp-for="@Model.EndDate">
                    <span asp-validation-for="EndDate" class="error"></span>
                </div>
            </div>
        </div>
















    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
