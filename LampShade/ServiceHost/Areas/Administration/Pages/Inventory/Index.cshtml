@page
@using InventoryManagement.Infrastracture.Configuration.Permissions
@model ServiceHost.Areas.Administration.Pages.Inventory.IndexModel
@{
}




@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت انبار  ";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a permission="@InventoryPermissions.CreateInventories" class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index" , "Create")">ایجاد عملیات جدید  </a>
        </p>
    </div>
</div>

<div permission="@InventoryPermissions.SearchInventories" class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در   عملیات </h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    
    
 
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ProductId"></label>
                        <select class="form-control" asp-for="SearchModel.ProductId" asp-items="@Model.Products">
                            <option value="0">انتخاب محصول</option>
                        </select>
                    </div>
                    
                    <div class="form-group m-r-10">
                        <div class="checkbox checkbox-primary">
                            <input asp-for="SearchModel.InStock" />
                            <label asp-for="SearchModel.InStock">
                                جستجو در غیر ناموجود ها
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست انبار(@Model.Inventories.Count) </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>شناسه</th>
                                    <th style="width: 20%;"> محصول</th>
                                    <th>قیمت</th>
                                    <th> موجودی انبار</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Inventories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.CurrentCount</td>
                                        <td>@item.CreationDate</td>
                                      
                                        @*<td>@item.CreationDate</td>*@

                                        @*<td class="text-center">
                                                @if (item.InStock == false)
                                                {
                                                    <i class="fa fa-remove fa-2x text-danger"></i>


                                                }
                                                @if (item.InStock == true)
                                                {
                                                    <i class="fa fa-check fa-2x text-success"></i>


                                                }

                                            </td>*@



                                        <td>
                                            <a permission="@InventoryPermissions.EditInventories" class="btn btn-warning  waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new {id=@item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            
                                            <a permission="@InventoryPermissions.Increase" class="btn btn-success waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Increase", new {id=@item.Id})">
                                                <i class="fa fa-plus"></i> افزایش
                                            </a> 
                                            <a permission="@InventoryPermissions.Reduce" class="btn btn-danger  waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Reduce", new {id=@item.Id})">
                                                <i class="fa fa-minus"></i> کاهش
                                            </a>
                                            
                                            <a permission="@InventoryPermissions.OperationLog" class="btn btn-primary   waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Log", new {id=@item.Id})"
                                               onclick="$('.modal-dialog').css('width','60%')">
                                                <i class="fa fa-recycle"></i> مشاهده گردش انبار
                                            </a>


                                            @*<a class="btn btn-danger btn-custom waves-effect waves-light m-b-5"
                                                   href="#showmodal=@Url.Page("./Index", "Delete", new {id=@item.Id})">
                                                    <i class="fa fa-remove"></i>حذف
                                                </a>

                                                @if (item.IsInStock == false)
                                                {
                                                    <a class="btn btn-success btn-custom waves-effect waves-light m-b-5"
                                                       asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id">
                                                        <i class="fa fa-restore"></i>موجود کن
                                                    </a>
                                                }
                                                @if (item.IsInStock == true)
                                                {
                                                    <a class="btn btn-purple btn-custom waves-effect waves-light m-b-5"
                                                       asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id">
                                                        <i class="fa fa-remove"></i>ناموجود
                                                    </a>
                                                }*@

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function() {
            $('#datatable').dataTable();
        });
    </script>
}