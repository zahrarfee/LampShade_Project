@model ShopManagement.Application.Contracts.Slide.EditSlide
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش اسلاید : @Model.Heading</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Picure" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="Picure" accept="image/*">
                    <span asp-validation-for="Picure" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">توضیح عکس</label>
                    <input type="text" class="form-control" asp-for="PictureAlt" onchange="fillField('PictureAlt', 'PictureTitle')" />
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PicureTitle" class="control-label">عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="PicureTitle">
                    <span asp-validation-for="PicureTitle" class="error"></span>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Heading" class="control-label">تیتر</label>
                    <input type="text" class="form-control" asp-for="Heading" />
                    <span asp-validation-for="Heading" class="error"></span>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Title" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="error"></span>
                </div>
            </div>


        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="form-group no-margin">
                    <label asp-for="Text" class="control-label">متن</label>
                    <textarea class="form-control autogrow" asp-for="Text"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Text" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BtnText" class="control-label">متن باتن</label>
                    <input type="text" class="form-control" asp-for="BtnText">
                    <span asp-validation-for="BtnText" class="error"></span>
                </div>
            </div>



        </div>



        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Link" class="control-label">لینک</label>
                    <input type="text" class="form-control" asp-for="Link">
                    <span asp-validation-for="Link" class="error"></span>
                </div>
            </div>
        </div>







    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>